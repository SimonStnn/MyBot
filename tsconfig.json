{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules" // Specifies the files to be excluded from compilation
  ],
  "include": [
    "src/**/*.ts"
  ]
}